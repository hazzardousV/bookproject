<%= form_for(@book, html: {multipart: true}) do |f| %>
	<ul>
	<% @book.errors.full_messages.each do |error| %>
		<li><%= error %></li>
	<% end %>
	</ul>
<p>
	<%= f.label :title %><br />
	<%= f.text_field :title %>
</p>
<p>
	<%= f.label :author %><br />
	<%= f.text_field :author %><br />
</p>
<p>
	<%= f.label :description %><br />
	<%= f.text_area :body %>
</p>
<p>
	<%= f.label :reader_list %><br />
	<%= f.text_field :reader_list %>
</p>
<p>
	<% if @book.image.exists? %>
		<%= image_tag @book.image.url %><br/>
	<% end %>
	<%= f.label :image, "Attach an Image" %><br />
	<%= f.file_field :image %>
<p>
	<%= f.submit %>
</p>
<% end %>