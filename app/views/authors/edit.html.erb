<%= form_for(@author, html: {multipart: true}) do |f| %>
	<ul>
	<% @author.errors.full_messages.each do |error| %>
		<li><%= error %></li>
	<% end %>
	</ul>
<h1> Edit this Author </h1>
<p>
	<%= f.label :name %><br />
	<%= f.text_field :name %>
</p>
<p>
	<%= f.label :title %><br />
	<%= f.text_field :title %><br />
</p>
<p>
	<%= f.label :link %><br />
	<%= f.text_field :link %><br />
</p>
<p>
	<%= f.label :book_list %><br />
	<%= f.text_field :book_list %>
</p>
<p>
	<% if @author.image.exists? %>
		<%= image_tag @author.image.url %> <br/>
	<% end %>
	<%= f.label :image, "Attach an Image" %><br />
	<%= f.file_field :image %>
<p>
	<%= f.submit %>
</p>
<% end %>